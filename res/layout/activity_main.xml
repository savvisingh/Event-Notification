<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#E8E8E8"
    android:orientation="vertical" >

    <LinearLayout 
        android:id="@+id/Static_bg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#6fb7ea" >
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
     
         <ImageView
            android:id="@+id/prevMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_action_previous_item"
            android:layout_gravity="center_vertical" >
                    </ImageView>
        <Button
            android:id="@+id/currentMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0.6"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="#6fb7ea"
            android:textColor="#FFFFFF"
            android:typeface="serif" >
        </Button>
        
         <ImageView
            android:id="@+id/nextMonth"
             android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_action_next_item" >

        </ImageView>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/blankspace"
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        android:orientation="horizontal"
       
        android:layout_below="@id/linearLayout1"
        >
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/days"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/blankspace"
        
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Sun" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Mon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Tue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Wed" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Thu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Fri" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Sat" />
    </LinearLayout>
    
 <LinearLayout 
        android:id="@+id/blankspace2"
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        android:orientation="horizontal"
       
        android:layout_below="@id/days"
        >
        </LinearLayout>
        </LinearLayout>
    
     <GridView
         android:id="@+id/calendar"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_above="@+id/staticinfo"
         android:layout_below="@id/Static_bg"
         android:numColumns="7"
         >

        </GridView>
    
       

   
    <LinearLayout
        android:id="@+id/staticinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#6fb7ea" 
        android:orientation="vertical"
        android:padding="3dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/khanda_black_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/khanda_black"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/khanda_black" />

                <TextView
                    android:id="@+id/masya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-Masya"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:typeface="serif" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/khanda_blue_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/khanda_blue"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/khanda_blue" />

                <TextView
                    android:id="@+id/sagrant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-Sagrant"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:typeface="serif" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/khanda_red_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/khanda_red"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/khanda_red" />

                <TextView
                    android:id="@+id/gurpurab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-Gurpurav"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:typeface="serif" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/khanda_green_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/khanda_green"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/khanda_green" />

                <TextView
                    android:id="@+id/puranmashi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-PuranMashi"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:typeface="serif" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/khanda_violet_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/khanda_violet"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/khanda_violet" />

                <TextView
                    android:id="@+id/historical_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-Historical Days"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:typeface="serif" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    

</RelativeLayout>